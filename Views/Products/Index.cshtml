@model IEnumerable<Project_VP.Models.Product>

<h2>Products List</h2>

<p>
    <a href="@Url.Action("Create")">Add New Product</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = product.Id })">Edit</a> |
                    <a href="@Url.Action("Details", new { id = product.Id })">Details</a> |
                    <a href="@Url.Action("Delete", new { id = product.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
