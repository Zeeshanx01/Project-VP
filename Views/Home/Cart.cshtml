@model List<Project_VP.Models.Product>

<h2>Your Cart</h2>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <ul>
        @foreach (var item in Model)
        {
            <li>@item.Name - $@item.Price</li>
        }
    </ul>
    <a href="/Home/Checkout">Proceed to Checkout</a>
}

<br />
<a href="/">Back to Products</a>
